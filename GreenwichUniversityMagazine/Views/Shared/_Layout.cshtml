
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GreenwichUniversityMagazine</title>

    <link rel="stylesheet" href="~/css/mainLayout.css" asp-append-version="true" />
  
</head>
<body>
    <header>
        <img src="~/img/Layout/logo.png" alt="Greenwich University Logo" class="logo">
        <div class="nav-container">
            <nav>
                <a asp-area="Student" asp-controller="Home" asp-action="Index">Home</a>
                <a asp-area="Student" asp-controller="Home" asp-action="Index">News</a>
                <a href="#">Events</a>
                <a asp-area="Student" asp-controller="Home" asp-action="About">About</a>
                <a href="#">Contact</a>
            </nav>
        </div>

        <div class="notification_container">

            <button id="fetchDataButton">
                    <span class="notification_count">1</span>
                    <img src="~/css/Navigation/notification.png" class="notification_icon" />
                </button>
        </div>
        <div id="partialViewContainer" class="notification_list_container"></div>
        <div class="user-logo">
            <img src="~/img/Layout/user-logo.png" alt="User Logo">
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <p>&copy; 2024 Greenwich University Forum. All rights reserved.</p>
    </footer>

</body>
</html>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Variable to track if data is visible
        var dataVisible = false;

        // Click event handler for the button
        $('#fetchDataButton').click(function () {
            if (!dataVisible) {
                // If data is not visible, fetch and display
                $.ajax({
                    url: 'Cordinate/Cordinate/GetNotification',
                    type: 'GET',
                    success: function (data) {
                        $('#partialViewContainer').html(data);
                        $('#partialViewContainer').show(); // Show the container
                        dataVisible = true; // Update the flag
                    },
                    error: function (xhr, status, error) {
                        console.error(error);
                    }
                });
            } else {
                // If data is visible, hide it
                $('#partialViewContainer').hide(); // Hide the container
                dataVisible = false; // Update the flag
            }
        });

        // Click event handler for clicking outside the table or container
        $(document).on('click', function (event) {
            if (!$(event.target).closest('#partialViewContainer').length &&
                !$(event.target).closest('#fetchDataButton').length) {
                $('#partialViewContainer').hide(); // Hide the container
                dataVisible = false; // Update the flag
            }
        });
    });
</script>