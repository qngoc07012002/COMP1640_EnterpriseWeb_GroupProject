@model Term
<link rel="stylesheet" href="~/css/User/Delete.css" />
<div class="card shadow border-0 mt-4 modal fade" id="CreateTerm">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Term</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-action="Create">
            <div class="border p-3 mt-4">
                <select id="year" name="Year">
                    <option value="">Select Year</option>
                    @for (int year = DateTime.Now.Year; year <= DateTime.Now.Year + 100; year++)
                    {
                        <option value="@year">@year</option>
                    }
                </select>

                <select id="season" name="Season">
                    <option value="">Select Season</option>
                    <option value="Spring">Spring</option>
                    <option value="Summer">Summer</option>
                    <option value="Fall">Fall</option>
                    <option value="Winter">Winter</option>
                </select>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Term" asp-action="Index" class="btn btn-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    @if (TempData["popupScript"] != null)
    {
        @Html.Raw(TempData["popupScript"])
    }
</script>

