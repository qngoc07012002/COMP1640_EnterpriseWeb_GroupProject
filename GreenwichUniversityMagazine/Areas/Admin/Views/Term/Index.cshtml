@model List<Term>
<link rel="stylesheet" href="~/css/User/Index.css" />

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2">Term Management</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-5">
        <div class="row pb-3">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <a asp-action="Create" asp-controller="Term" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Term
                </a>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pb-3">
                <div class="col-6"></div>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>StartDate</th>
                            <th>EndDate</th>
                            <th>IsDelete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {

                                <tr>
                                    <td>@obj.Id</td>
                                    <td>@obj.StartDate</td>
                                    <td>@obj.EndDate</td>
                                    <td>
                                        @if (obj.IsDeleted)
                                        {
                                            <span class="text-danger">Not Available</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">Available</span>
                                        }
                                    </td>

                                    <td class="w-75 btn-group" role="group">
                                            <a asp-controller="Term" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>
                                        <a asp-controller="Term" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
