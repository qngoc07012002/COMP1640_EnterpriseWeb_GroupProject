@model Term
<link rel="stylesheet" href="~/css/User/Delete.css" />
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Term</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="@Model.Id" hidden />
            <input asp-for="@Model.Name" hidden />

            <div class="border p-3 mt-4">
                <div class="form-group row">
                    <label asp-for="StartDate" class="col-sm-2 col-form-label p-0"></label>
                    <div class="col-sm-10">
                        <div class="form-floating py-2">
                            <input asp-for="StartDate" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="EndDate" class="col-sm-2 col-form-label p-0"></label>
                    <div class="col-sm-10">
                        <div class="form-floating py-2">
                            <input asp-for="EndDate" class="form-control" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Edit</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Term" asp-action="Index" class="btn btn-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    @if (TempData["popupScript"] != null)
    {
        @Html.Raw(TempData["popupScript"])
    }
</script>