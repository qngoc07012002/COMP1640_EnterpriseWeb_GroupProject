@model UserVM

<form method="POST" enctype="multipart/form-data">
    <input asp-for="@Model.User.Id" hidden />
    <input asp-for="@Model.User.avtUrl" hidden />
    <div class="boder p-3 mt-4" style="padding-bottom:100px">
        <div class="mb-3 row p-1">
            <label asp-for="User.Email" class="p-0"></label>
            <input asp-for="User.Email" class="form-control" />
            <span asp-validation-for="User.Email" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="User.Password" class="p-0"></label>
            <input asp-for="User.Password" class="form-control" />
            <span asp-validation-for="User.Password" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="User.Name" class="p-0"></label>
            <input asp-for="User.Name" class="form-control" />
            <span asp-validation-for="User.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="User.Code" class="p-0"></label>
            <input asp-for="User.Code" class="form-control" />
            <span asp-validation-for="User.Code" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="User.DateOfBirth" class="p-0"></label>
            <input asp-for="User.DateOfBirth" class="form-control" />
            <span asp-validation-for="User.DateOfBirth" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label asp-for="User.FacultyId"></label>
            <select asp-for="@Model.User.FacultyId" asp-items="@Model.MyFaculties" class="form-select form-control "></select>
        </div>
        <div class="row mb-3">
            <input type="file" name="file" class="form-control border-0 shadow" />
            <label asp-for="User.avtUrl" class="ms-2"></label>
            <img src="@Model.User.avtUrl" width="100%"
                 style="border-radius:5px; border:1px solid #bbb9b9" />
        </div>
        <div class="row mb-3">
            <select asp-for="User.Status" class="form-control border-0 shadow">
                <option value="true">verify</option>
                <option value="false">unverify</option>
            </select>
            <label asp-for="User.Status" class="ms-2"></label>
            <span asp-validation-for="User.Status" class="text-danger"></span>

        </div>
        <div class="row mb-3">
            <select asp-for="User.Role" class="form-control border-0 shadow">
                <option value="student">Student</option>
                <option value="cordinate">Cordinate</option>
                <option value="manager">Manager</option>
            </select>
            <label asp-for="User.Role" class="ms-2"></label>
            <span asp-validation-for="User.Role" class="text-danger"></span>

        </div>
        <div class="row">
            <button type="submit" class="btn btn-outline-primary form-control" style="width:150px">Update</button>
            <div class="col-6 col-md-3">
                <a asp-controller="User" asp-action="Index" type="submit" class="btn btn-outline-secondary form-control" style="width:150px">Go Back</a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}