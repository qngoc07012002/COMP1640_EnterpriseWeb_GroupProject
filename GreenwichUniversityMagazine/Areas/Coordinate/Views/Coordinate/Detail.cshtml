@* <%@ Page Language="C#" AutoEventWireup="true" CodeFile="Open_PDF.aspx.cs" Inherits="Open_PDF" %> *@
@model CoordinateVM
@{
    ViewData["Title"] = "Detail";
}
<link rel="stylesheet" href="~/css/Student/Article.css" />
<script src="https://cdn.ckeditor.com/4.19.1/standard/ckeditor.js"></script>

<h1>Detail Article</h1>
<hr />
<div class="row">
    <div class="col-md-4">
            <div class="row">
                <input asp-for="@Model.articles.ArticleId" hidden />
                <input asp-for="@Model.articles.SubmitDate" hidden />
                <input asp-for="@Model.resource.ArticleId" hidden />
                <input asp-for="@Model.resource.Path" hidden />

            <div class="form-group">
                    <label class="control-label">Magazines Name</label>
                    <select disabled asp-for="@Model.articles.MagazinedId" class="form-control" asp-items="@Model.AvailableMagazines"></select>
                </div>
                <div class="form-group">
                    <label class="control-label">Name of Article: </label>
                <input disabled asp-for="@Model.articles.Title" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Subtitle: </label>
                <input disabled asp-for="@Model.articles.SubTitle" class="form-control" />
                </div>
                <div class="row mb-3">
                    <label>Image Head</label>
                <img class="col-2" src="@Model.articles.imgUrl" />
                </div>
            <div class="form-group">
                <label class="control-label"></label>
                <textarea disabled id="content" asp-for="@Model.articles.Body" class="form-control">@Model.articles.Body</textarea>
                <span asp-validation-for="@Model.articles.Body" class="text-danger"></span>
            @foreach (var resource in Model.ListResource)
            {
                var fileName = System.IO.Path.GetFileName(resource.Path);
                var relativePath = Url.Content($"~/Resource/Article/{resource.ArticleId}/{fileName}"); // Đường dẫn tương đối đến tệp PDF
                <div class="resource-item">
                    <a href="@relativePath" target="_blank" type="application/pdf">@fileName</a>
                </div>
            }
                <hr />
            </div>
        <></>
    </div>
</div>
<hr />

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    CKEDITOR.replace('content');
</script>

