@model CoordinateVM
<link rel="stylesheet" href="~/css/User/Index.css" />

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2">Faculty List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-5">
        <div class="table-responsive">
            @* <div class="form-group row">
                <label asp-for="faculties.Id" class="col-sm-2 col-form-label p-0"></label>
                <div class="col-sm-10">
                    <div class="form-floating py-2">
                        <select id="facultySelect" asp-for="@Model.faculties.Id" asp-items="@Model.AvailableFaculties" class="form-select form-control">
                            <option value="all">All</option> <!-- Thêm option này để lọc danh sách tất cả các giáo viên -->
                        </select>
                    </div>
                </div>
            </div> *@
            <table class="table table-bordered table-striped" id="facultyTable">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                    </tr>
                </thead>
                <tbody id="magazineTableBody">
                    @foreach (var obj in Model.ListMagazines)
                    {
                        <tr data-faculty-id="@obj.FacultyId">
                            <td>
                                <a asp-controller="Coordinate" asp-action="ViewArticle" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> @obj.Id
                                </a>
                            </td>
                            <td>@obj.Title</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div id="magazine-list"></div>
        </div>
    </div>
</div>

<script>
    document.getElementById('facultySelect').addEventListener('change', function () {
        var facultyId = this.value;
        var magazineRows = document.querySelectorAll('#magazineTableBody tr');

        magazineRows.forEach(function (row) {
            var rowFacultyId = row.getAttribute('data-faculty-id');
            if (facultyId === 'all' || rowFacultyId === facultyId) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });

    // Đảm bảo rằng khi trang web được tải, tất cả các hàng đều được hiển thị
    window.onload = function () {
        var magazineRows = document.querySelectorAll('#magazineTableBody tr');
        magazineRows.forEach(function (row) {
            row.style.display = '';
        });
    };
</script>
