    <h1>assa</h1>
<script>
        document.addEventListener("DOMContentLoaded", function () {
            var titles = document.querySelectorAll(".card-title");
            var subtitles = document.querySelectorAll(".card-text");

            titles.forEach(function (title) {
                var text = title.textContent.trim();
                var words = text.split(" ");
                if (words.length > 5) {
                    title.textContent = words.slice(0, 5).join(" ") + "...";
                }
            });

            subtitles.forEach(function (subtitle) {
                var text = subtitle.textContent.trim();
                var words = text.split(" ");
                if (words.length > 20) {
                    subtitle.textContent = words.slice(0, 20).join(" ") + "...";
                }
            });
        });
       

       
</script>


