@model IEnumerable<Article>



<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<link rel="stylesheet" href="~/css/Student/Home.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css" />
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>




<div class="homepage">
    <div id="carouselExampleIndicators" class="carousel slide">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>

        </div>
        <div class="carousel-inner">
            <div class="carousel-item active c-item">
                <img src="~/img/Home/7.jpg" class="d-block w-100 c-img" alt="Slide 1">
            </div>
            <div class="carousel-item c-item">
                <img src="~/img/Home/6.jpg" class="d-block w-100 c-img" alt="Slide 2">
            </div>

        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    @* ///////////////////////////////////////////////////////////////////// *@

    <div class="border-bottom border-dark">
        <div class="text-center bg-white py-2">
            <h2 class="m-0">HOT ARTICLES</h2>
        </div>
    </div>




    @* ///////////////////////////////////////////////////////////////////// *@

    <div class="container-homepage">
        <div class="row p-3">
            <div class="col-md-6">
                <div class="card card-left" style="height: 580px;">
                    <img src="~/img/Home/1.png" class="card-img-top card-img-custom" alt="...">
                    <div class="card-body">
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    </div>
                </div>
            </div>


            <div class="col-md-6">
                <h1 class="text-center"> Faculty</h1>
                <div class="row row-cols-1 row-cols-md-2 g-4">
                    <div class="col">
                        <a asp-area="Admin" asp-controller="User" asp-action="Index" style="text-decoration: none;">
                            <div class="card card-faculty" style="height: 250px">
                                <img src="~/img/Home/it1.jpg" class="card-img-top" alt="..." style="height: 180px">
                                <div class="card-body">
                                    <h5 class="card-title text-center">Information Technology </h5>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col">
                        <a asp-area="Admin" asp-controller="User" asp-action="Index" style="text-decoration: none;">
                            <div class="card card-faculty" style="height: 250px">
                                <img src="~/img/Home/design.webp" class="card-img-top" alt="..." style="height: 180px">
                                <div class="card-body">
                                    <h5 class="card-title text-center">Design</h5>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col">
                        <a asp-area="Admin" asp-controller="User" asp-action="Index" style="text-decoration: none;">
                            <div class="card card-faculty" style="height: 250px">
                                <img src="~/img/Home/marketing.jpg" class="card-img-top" alt="..." style="height: 180px">
                                <div class="card-body">
                                    <h5 class="card-title text-center">Digital Marketing</h5>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col">
                        <a asp-area="Admin" asp-controller="User" asp-action="Index" style="text-decoration: none;">
                            <div class="card card-faculty" style="height: 250px">
                                <img src="~/img/Home/b.webp" class="card-img-top" alt="..." style="height: 180px">
                                <div class="card-body">
                                    <h5 class="card-title text-center">Business</h5>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>



    @* ///////////////////////////////////////////////////////////////////// *@

    <div class="border-bottom border-dark">
        <div class="text-center bg-white py-2">
            <div style="display: inline-block; float: left;">
                <h4 class="m-0"> Articles New</h4>
            </div>
            <div style="display: inline-block; float: right;">
                <a asp-area="Student" asp-controller="View" asp-action="Index" class="viewall">View All</a>
            </div>

            <div style="clear:both;"></div>
        </div>
    </div>

    @* ///////////////////////////////////////////////////////////////////// *@
    <nav class="navbar navbar-expand-lg navbar-light bg-light">

        <div class="row p-3 ">
            <div class="col-md-3">
                <div class="d-flex  align-items-center mb-3">
                    <h6 class="m-1 mr-2">ARTICLES</h6>
                    <select class="form-select" style="width:230px;" aria-label="Articles">
                        <option selected>Open this select menu</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="d-flex  align-items-center mb-3">
                    <h6 class="m-1 mr-2">Magazine</h6>
                    <select class="form-select" style="width:230px;" aria-label="Magazine">
                        <option selected>Open this select menu</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>
            </div>

            <div class="col-md-3">
                <div class="d-flex  align-items-center mb-3">
                    <h6 class="m-1 mr-2">DSSSDASa</h6>
                    <select class="form-select" style="width:230px;" aria-label="Magazine">
                        <option selected>Open this select menu</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>
            </div>

            <div class="col-md-3 ">

                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>



    <div class="row pb-3" id="articleContainer">
        @foreach (var article in Model.Take(4))
        {
            <div class="clo-lg-2 col-sm-6">
                <div class="row p-2">
                    <div class="col-14 p-1">
                        <div class="card mb-3">
                            <div class="row g-0">
                                <div class="col-md-4" id="imgcard1">
                                    <img src="@article.imgUrl" class="card-img" style="height: 200px; overflow: hidden;">
                                </div>
                                <div class="col-md-8" id="imgcard2">

                                    <div class="card-body" style=" max-height: 200px; overflow: hidden; ">
                                        <div class="pd-1"> <a asp-area="Admin" asp-controller="User" asp-action="Index" class="card-title h6 text-primary opacity-75 text-uppercase text-center">@article.Title</a> </div>
                                        <p class="card-text">@article.SubTitle</p>
                                        <p class="card-title"><small class="text-muted">Magazine @article.Magazines.Title</small></p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        }
    </div>

</div>

<script>
    $(document).ready(function () {
        // Giới hạn số từ trong card title
        $("#articleContainer .card-title").each(function () {
            var maxWords = 5;
            var title = $(this).text().trim().split(/\s+/);
            if (title.length > maxWords) {
                var limitedTitle = title.slice(0, maxWords).join(" ");
                $(this).text(limitedTitle + "...");
            }
        });

        // Giới hạn số từ trong card text
        $("#articleContainer .card-text").each(function () {
            var maxWords = 15;
            var text = $(this).text().trim().split(/\s+/);
            if (text.length > maxWords) {
                var limitedText = text.slice(0, maxWords).join(" ");
                $(this).text(limitedText + "...");
            }
        });
    });




</script>
